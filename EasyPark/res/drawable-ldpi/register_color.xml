<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >  
        <shape>  
            <gradient  
                android:startColor="#ffff0000"  
                android:endColor="#ffff0000"  
                android:angle="270" />  
            <stroke  
                android:width="2dp"  
                android:color="#ffff0000" />  
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
  
    <item android:state_focused="true" >  
        <shape>  
            <gradient  
                android:startColor="#ffff0000"  
                android:endColor="#ffff0000"  
                android:angle="270" />  
            <stroke  
                android:width="2dp"  
                android:color="#ffff0000" />  
            <corners  
                android:radius="2dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>
    
    <item>  
        <shape>  
            <gradient  
                android:startColor="#ffff0000"  
                android:endColor="#ffff0000"  
                android:angle="270" /> 
            <corners  
            android:radius="2dp" />  
        </shape>  
    </item>

</selector>
